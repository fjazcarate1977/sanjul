{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "declaration": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ESNext",
    "sourceMap": true,
    "lib": ["ESNext"],
    "resolveJsonModule": true,
    "strict": true
  },
  "exclude": ["node_modules"]
}
